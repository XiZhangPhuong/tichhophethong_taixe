<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HelpCenterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/_realativeHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_dark"
                android:padding="10dp">

                <TextView
                    android:id="@+id/img_back11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Trung tâm trợ giúp"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/img_back_helpCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/ic_back_24" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_titele_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:layout_below="@id/_realativeHelp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="serif"/>

            <EditText
                android:id="@+id/edt_title_helpCenter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/tv_titele_help"
                android:background="@drawable/customedittext"
                android:drawablePadding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <TextView
                android:id="@+id/tv_ep_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMAIL/PHONE"
                android:layout_below="@id/edt_title_helpCenter"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"/>

            <EditText
                android:id="@+id/edt_ep_helpCenter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/tv_ep_help"
                android:background="@drawable/customedittext"
                android:drawablePadding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <TextView
                android:id="@+id/tv_content_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTENT"
                android:layout_below="@id/edt_ep_helpCenter"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"/>

            <EditText
                android:id="@+id/edt_content_helpCenter"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="top"
                android:padding="6dp"
                android:layout_below="@+id/tv_content_help"
                android:background="@drawable/customedittext"
                android:drawablePadding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:text="SEND"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:layout_below="@+id/edt_content_helpCenter"
                android:background="@drawable/custom"
                android:backgroundTint="@color/teal_700"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>